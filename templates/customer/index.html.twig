{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Gender</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>BirthDate</th>
                <th>Id</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.genderTransKey | trans  }}</td>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.address }}</td>
                <td>{{ customer.postalCode }}</td>
                <td>{{ customer.city }}</td>
                <td>{{ customer.mail }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.birthDate ? customer.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ customer.id }}</td>
                <td>{{ customer.password }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
