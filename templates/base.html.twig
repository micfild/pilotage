<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/style.css') }}">
        {% endblock %}
    </head>
    <body>
    {% dump %}
    <a href="{{ path('tag_index') }}">tag</a>
    <a href="{{ path('home') }}">home</a>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('home') }}">{{ 'header.title.label' | trans }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('tag_index') }}">{{ 'header.menu.item.tag.label' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('bike_index') }}">{{ 'header.menu.item.bike.label' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('reservation_index') }}">{{ 'header.menu.item.reservation.label' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('customer_index') }}">{{ 'header.menu.item.customer.label' | trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('bike_owner_index') }}">{{ 'header.menu.item.bikeOwner.label' | trans }}</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                {% block body %}{% endblock %}
            </div>
            <div class="col-1"></div>
        </div>
    </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('script') }}
        {% endblock %}
    </body>
</html>
